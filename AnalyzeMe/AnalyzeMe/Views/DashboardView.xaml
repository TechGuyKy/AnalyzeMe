<Page x:Class="AnalyzeMe.Views.DashboardView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="750" d:DesignWidth="1250"
      Background="Transparent">

	<ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
		<StackPanel>
			<TextBlock Text="SYSTEM OVERVIEW"
                     Style="{StaticResource TitleText}"
                     Margin="0,0,0,20"/>

			
			<Grid Margin="0,0,0,20">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<Border Grid.Column="0" Style="{StaticResource MetricCard}">
					<StackPanel>
						<TextBlock Text="🔥 CPU"
                                 FontSize="21"
                                 FontFamily="Consolas"
                                 Foreground="#00ffff"
                                 Margin="0,0,0,10"/>
						<TextBlock x:Name="CpuUsageText"
                                 Text="0%"
                                 Style="{StaticResource ValueText}"/>
						<TextBlock Text="Usage"
                                 Style="{StaticResource LabelText}"/>
					</StackPanel>
				</Border>
				<Border Grid.Column="1" Style="{StaticResource MetricCard}">
					<StackPanel>
						<TextBlock Text="💾 RAM"
                                 FontSize="21"
                                 FontFamily="Consolas"
                                 Foreground="#ff00ff"
                                 Margin="0,0,0,10"/>
						<TextBlock x:Name="RamUsageText"
                                 Text="0%"
                                 Style="{StaticResource ValueText}"
                                 Foreground="#ff00ff"/>
						<TextBlock Text="Usage"
                                 Style="{StaticResource LabelText}"/>
					</StackPanel>
				</Border>
				<Border Grid.Column="2" Style="{StaticResource MetricCard}">
					<StackPanel>
						<TextBlock Text="💿 DISK"
                                 FontSize="21"
                                 FontFamily="Consolas"
                                 Foreground="#9d00ff"
                                 Margin="0,0,0,10"/>
						<TextBlock x:Name="DiskUsageText"
                                 Text="0%"
                                 Style="{StaticResource ValueText}"
                                 Foreground="#9d00ff"/>
						<TextBlock Text="Usage"
                                 Style="{StaticResource LabelText}"/>
					</StackPanel>
				</Border>
				<Border Grid.Column="3" Style="{StaticResource MetricCard}">
					<StackPanel>
						<TextBlock Text="⚙️ PROC"
                                 FontSize="21"
                                 FontFamily="Consolas"
                                 Foreground="#ffaa00"
                                 Margin="0,0,0,10"/>
						<TextBlock x:Name="ProcessCountText"
                                 Text="0"
                                 Style="{StaticResource ValueText}"
                                 Foreground="#ffaa00"/>
						<TextBlock Text="Active"
                                 Style="{StaticResource LabelText}"/>
					</StackPanel>
				</Border>
			</Grid>
			<Border Style="{StaticResource CyberCard}">
				<StackPanel>
					<TextBlock Text="SYSTEM INFORMATION"
                             FontFamily="Consolas"
                             FontSize="24"
                             FontWeight="Bold"
                             Foreground="#00ffff"
                             Margin="0,0,0,15"/>

					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="250"/>
							<ColumnDefinition Width="*"/>
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
						</Grid.RowDefinitions>

						<TextBlock Grid.Row="0" Grid.Column="0" Text="Computer Name:" Style="{StaticResource SubtitleText}" Margin="0,10"/>
						<TextBlock x:Name="ComputerNameText" Grid.Row="0" Grid.Column="1" Text="Loading..." Foreground="#ffffff" FontFamily="Consolas" FontSize="19" Margin="10,10"/>

						<TextBlock Grid.Row="1" Grid.Column="0" Text="Operating System:" Style="{StaticResource SubtitleText}" Margin="0,10"/>
						<TextBlock x:Name="OsText" Grid.Row="1" Grid.Column="1" Text="Loading..." Foreground="#ffffff" FontFamily="Consolas" FontSize="19" Margin="10,10"/>

						<TextBlock Grid.Row="2" Grid.Column="0" Text="Processor:" Style="{StaticResource SubtitleText}" Margin="0,10"/>
						<TextBlock x:Name="ProcessorText" Grid.Row="2" Grid.Column="1" Text="Loading..." Foreground="#ffffff" FontFamily="Consolas" FontSize="19" Margin="10,10" TextWrapping="Wrap"/>

						<TextBlock Grid.Row="3" Grid.Column="0" Text="CPU Speed:" Style="{StaticResource SubtitleText}" Margin="0,10"/>
						<TextBlock x:Name="CpuSpeedText" Grid.Row="3" Grid.Column="1" Text="Loading..." Foreground="#00ffff" FontFamily="Consolas" FontSize="19" FontWeight="Bold" Margin="10,10"/>

						<TextBlock Grid.Row="4" Grid.Column="0" Text="Total RAM:" Style="{StaticResource SubtitleText}" Margin="0,10"/>
						<TextBlock x:Name="TotalRamText" Grid.Row="4" Grid.Column="1" Text="Loading..." Foreground="#ff00ff" FontFamily="Consolas" FontSize="19" FontWeight="Bold" Margin="10,10"/>

						<TextBlock Grid.Row="5" Grid.Column="0" Text="Memory Type:" Style="{StaticResource SubtitleText}" Margin="0,10"/>
						<TextBlock x:Name="MemoryTypeText" Grid.Row="5" Grid.Column="1" Text="Loading..." Foreground="#ffffff" FontFamily="Consolas" FontSize="19" Margin="10,10"/>

						<TextBlock Grid.Row="6" Grid.Column="0" Text="Graphics Card:" Style="{StaticResource SubtitleText}" Margin="0,10"/>
						<TextBlock x:Name="GraphicsText" Grid.Row="6" Grid.Column="1" Text="Loading..." Foreground="#ffffff" FontFamily="Consolas" FontSize="19" Margin="10,10" TextWrapping="Wrap"/>

						<TextBlock Grid.Row="7" Grid.Column="0" Text="System Uptime:" Style="{StaticResource SubtitleText}" Margin="0,10"/>
						<TextBlock x:Name="UptimeText" Grid.Row="7" Grid.Column="1" Text="Loading..." Foreground="#ffaa00" FontFamily="Consolas" FontSize="19" FontWeight="Bold" Margin="10,10"/>
					</Grid>
				</StackPanel>
			</Border>
			<Grid Margin="0,20,0,0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<Border Grid.Column="0" Style="{StaticResource CyberCard}">
					<StackPanel>
						<TextBlock Text="SYSTEM HEALTH SCORE"
                                 FontFamily="Consolas"
                                 FontSize="21"
                                 FontWeight="Bold"
                                 Foreground="#00ffff"
                                 Margin="0,0,0,15"/>

						<TextBlock x:Name="HealthScoreText"
                                 Text="85"
                                 FontFamily="Consolas"
                                 FontSize="80"
                                 FontWeight="Bold"
                                 Foreground="#00ff00"
                                 HorizontalAlignment="Center"
                                 Margin="0,10"/>

						<TextBlock x:Name="HealthStatusText"
                                 Text="GOOD"
                                 FontFamily="Consolas"
                                 FontSize="24"
                                 FontWeight="Bold"
                                 Foreground="#00ff00"
                                 HorizontalAlignment="Center"/>
					</StackPanel>
				</Border>
				<Border Grid.Column="1" Style="{StaticResource CyberCard}">
					<StackPanel>
						<TextBlock Text="QUICK ACTIONS"
                                 FontFamily="Consolas"
                                 FontSize="21"
                                 FontWeight="Bold"
                                 Foreground="#00ffff"
                                 Margin="0,0,0,15"/>

						<Button Content="🔄 REFRESH DATA"
                              Style="{StaticResource CyberButton}"
                              Margin="0,8"
                              Click="RefreshButton_Click"/>
						<Button Content="🔍 RUN DIAGNOSTICS"
                              Style="{StaticResource CyberButton}"
                              Margin="0,8"
                              Click="DiagnosticsButton_Click"/>
						<Button Content="💡 GET RECOMMENDATIONS"
                              Style="{StaticResource CyberButton}"
                              Margin="0,8"
                              Click="RecommendationsButton_Click"/>
					</StackPanel>
				</Border>
			</Grid>
		</StackPanel>
	</ScrollViewer>
</Page>