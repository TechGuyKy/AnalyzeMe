<Page x:Class="AnalyzeMe.Views.HardwareView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1250"
      Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel>
            <TextBlock Text="HARDWARE SPECIFICATIONS" 
                     Style="{StaticResource TitleText}"
                     Margin="0,0,0,20"/>

            <!-- CPU Information -->
            <Border Style="{StaticResource CyberCard}">
                <StackPanel>
                    <TextBlock Text="🔥 PROCESSOR" 
                             FontFamily="Consolas"
                             FontSize="24" 
                             FontWeight="Bold"
                             Foreground="#00ffff"
                             Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Model:" Style="{StaticResource SubtitleText}" Margin="0,10"/>
                        <TextBlock x:Name="CpuModelText" Grid.Row="0" Grid.Column="1" Text="Loading..." Foreground="#ffffff" FontFamily="Consolas" FontSize="19" Margin="10,10" TextWrapping="Wrap"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Cores / Threads:" Style="{StaticResource SubtitleText}" Margin="0,10"/>
                        <TextBlock x:Name="CpuCoresText" Grid.Row="1" Grid.Column="1" Text="Loading..." Foreground="#00ffff" FontFamily="Consolas" FontSize="19" FontWeight="Bold" Margin="10,10"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Base Speed:" Style="{StaticResource SubtitleText}" Margin="0,10"/>
                        <TextBlock x:Name="CpuBaseSpeedText" Grid.Row="2" Grid.Column="1" Text="Loading..." Foreground="#ffffff" FontFamily="Consolas" FontSize="19" Margin="10,10"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Max Speed:" Style="{StaticResource SubtitleText}" Margin="0,10"/>
                        <TextBlock x:Name="CpuMaxSpeedText" Grid.Row="3" Grid.Column="1" Text="Loading..." Foreground="#00ffff" FontFamily="Consolas" FontSize="19" FontWeight="Bold" Margin="10,10"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Architecture:" Style="{StaticResource SubtitleText}" Margin="0,10"/>
                        <TextBlock x:Name="CpuArchText" Grid.Row="4" Grid.Column="1" Text="Loading..." Foreground="#ffffff" FontFamily="Consolas" FontSize="19" Margin="10,10"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Memory Information -->
            <Border Style="{StaticResource CyberCard}" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="💾 MEMORY (RAM)" 
                             FontFamily="Consolas"
                             FontSize="24" 
                             FontWeight="Bold"
                             Foreground="#ff00ff"
                             Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Total Capacity:" Style="{StaticResource SubtitleText}" Margin="0,10"/>
                        <TextBlock x:Name="RamTotalText" Grid.Row="0" Grid.Column="1" Text="Loading..." Foreground="#ff00ff" FontFamily="Consolas" FontSize="19" FontWeight="Bold" Margin="10,10"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Available:" Style="{StaticResource SubtitleText}" Margin="0,10"/>
                        <TextBlock x:Name="RamAvailableText" Grid.Row="1" Grid.Column="1" Text="Loading..." Foreground="#00ffff" FontFamily="Consolas" FontSize="19" FontWeight="Bold" Margin="10,10"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Memory Type:" Style="{StaticResource SubtitleText}" Margin="0,10"/>
                        <TextBlock x:Name="RamTypeText" Grid.Row="2" Grid.Column="1" Text="Loading..." Foreground="#ffffff" FontFamily="Consolas" FontSize="19" Margin="10,10"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Speed:" Style="{StaticResource SubtitleText}" Margin="0,10"/>
                        <TextBlock x:Name="RamSpeedText" Grid.Row="3" Grid.Column="1" Text="Loading..." Foreground="#ffffff" FontFamily="Consolas" FontSize="19" Margin="10,10"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Slots (Used/Total):" Style="{StaticResource SubtitleText}" Margin="0,10"/>
                        <TextBlock x:Name="RamSlotsText" Grid.Row="4" Grid.Column="1" Text="Loading..." Foreground="#ffffff" FontFamily="Consolas" FontSize="19" Margin="10,10"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Storage Information -->
            <Border Style="{StaticResource CyberCard}" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="💿 STORAGE DEVICES" 
                             FontFamily="Consolas"
                             FontSize="24" 
                             FontWeight="Bold"
                             Foreground="#9d00ff"
                             Margin="0,0,0,15"/>

                    <ListView x:Name="DisksListView"
                            Style="{StaticResource CyberListView}"
                            MaxHeight="300">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="150"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" 
                                             Text="{Binding DisplayType}"
                                             FontSize="28"
                                             VerticalAlignment="Center"/>

                                    <StackPanel Grid.Column="1" Margin="15,0">
                                        <TextBlock Text="{Binding Model}" 
                                                 Foreground="#ffffff"
                                                 FontFamily="Consolas"
                                                 FontSize="18"
                                                 FontWeight="Bold"/>
                                        <TextBlock Text="{Binding InterfaceType}" 
                                                 Foreground="#6a7a8a"
                                                 FontFamily="Consolas"
                                                 FontSize="15"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="2"
                                             Text="{Binding DisplaySize}"
                                             Foreground="#00ffff"
                                             FontFamily="Consolas"
                                             FontSize="18"
                                             FontWeight="Bold"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Right"/>

                                    <TextBlock Grid.Column="3"
                                             Foreground="#6a7a8a"
                                             FontFamily="Consolas"
                                             FontSize="15"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Right"
                                             Margin="15,0,0,0">
                                        <Run Text="Partitions: "/>
                                        <Run Text="{Binding Partitions}"/>
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

            <!-- Graphics & Motherboard -->
            <Grid Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- GPU Information -->
                <Border Grid.Column="0" Style="{StaticResource CyberCard}">
                    <StackPanel>
                        <TextBlock Text="🎮 GRAPHICS" 
                                 FontFamily="Consolas"
                                 FontSize="24" 
                                 FontWeight="Bold"
                                 Foreground="#00ffff"
                                 Margin="0,0,0,15"/>

                        <TextBlock x:Name="GpuNameText"
                                 Text="Loading..."
                                 Foreground="#ffffff"
                                 FontFamily="Consolas"
                                 FontSize="18"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,15"/>

                        <TextBlock Style="{StaticResource LabelText}" Text="Video Memory:" Margin="0,8,0,5"/>
                        <TextBlock x:Name="GpuMemoryText"
                                 Text="Loading..."
                                 Foreground="#00ffff"
                                 FontFamily="Consolas"
                                 FontSize="19"
                                 FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- Motherboard Information -->
                <Border Grid.Column="1" Style="{StaticResource CyberCard}">
                    <StackPanel>
                        <TextBlock Text="⚙️ MOTHERBOARD" 
                                 FontFamily="Consolas"
                                 FontSize="24" 
                                 FontWeight="Bold"
                                 Foreground="#00ffff"
                                 Margin="0,0,0,15"/>

                        <TextBlock Style="{StaticResource LabelText}" Text="Model:" Margin="0,8,0,5"/>
                        <TextBlock x:Name="MoboNameText"
                                 Text="Loading..."
                                 Foreground="#ffffff"
                                 FontFamily="Consolas"
                                 FontSize="18"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,15"/>

                        <TextBlock Style="{StaticResource LabelText}" Text="BIOS:" Margin="0,8,0,5"/>
                        <TextBlock x:Name="BiosText"
                                 Text="Loading..."
                                 Foreground="#ffffff"
                                 FontFamily="Consolas"
                                 FontSize="18"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,8"/>

                        <TextBlock x:Name="BiosDateText"
                                 Text="Loading..."
                                 Foreground="#6a7a8a"
                                 FontFamily="Consolas"
                                 FontSize="15"/>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>