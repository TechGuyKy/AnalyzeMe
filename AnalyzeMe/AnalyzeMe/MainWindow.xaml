<Window x:Class="AnalyzeMe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AnalyzeMe - Advanced System Analyzer" 
        Height="900" Width="1600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize">

    <Window.Resources>
        <Storyboard x:Key="GlowAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="GlowBorder"
                           Storyboard.TargetProperty="Opacity"
                           From="0.3" To="0.8" Duration="0:0:2"
                           AutoReverse="True"/>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource GlowAnimation}"/>
        </EventTrigger>
    </Window.Triggers>

    <Border Background="#0a0e1a" 
            BorderBrush="#00ffff" 
            BorderThickness="2"
            CornerRadius="10">
        <Border.Effect>
            <DropShadowEffect Color="#00ffff" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="35"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" 
                    Background="#0f1420"
                    CornerRadius="10,10,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- App Title -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="25,0">
                        <TextBlock Text="⚡" 
                                 FontSize="35" 
                                 Foreground="#00ffff"
                                 VerticalAlignment="Center"
                                 Margin="0,0,12,0"/>
                        <TextBlock Text="ANALYZE" 
                                 FontFamily="Consolas"
                                 FontSize="28" 
                                 FontWeight="Bold"
                                 Foreground="#00ffff"
                                 VerticalAlignment="Center"/>
                        <TextBlock Text="ME" 
                                 FontFamily="Consolas"
                                 FontSize="28" 
                                 FontWeight="Bold"
                                 Foreground="#ff00ff"
                                 VerticalAlignment="Center"
                                 Margin="3,0,0,0"/>
                        <TextBlock Text=" BETA" 
                                 FontFamily="Consolas"
                                 FontSize="16" 
                                 FontWeight="Bold"
                                 Foreground="#6a7a8a"
                                 VerticalAlignment="Center"
                                 Margin="7,0,0,0"/>
                    </StackPanel>

                    <!-- Window Controls -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,10,0">
                        <Button Content="─" 
                                Style="{StaticResource WindowControlButton}"
                                Click="MinimizeButton_Click"/>
                        <Button Content="□" 
                                Style="{StaticResource WindowControlButton}"
                                Click="MaximizeButton_Click"/>
                        <Button Content="✕" 
                                Style="{StaticResource WindowControlButton}"
                                Click="CloseButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Glow Effect Border -->
                <Border x:Name="GlowBorder"
                        Grid.ColumnSpan="2"
                        BorderBrush="#00ffff"
                        BorderThickness="1"
                        Opacity="0.3"
                        IsHitTestVisible="False"/>

                <!-- Navigation Menu -->
                <Border Grid.Column="0" 
                        Background="#0f1420"
                        BorderBrush="#1a1f2e"
                        BorderThickness="0,0,1,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="0,20,0,0">
                            <RadioButton x:Name="DashboardButton"
                                       Content="📊 DASHBOARD"
                                       Style="{StaticResource NavButton}"
                                       IsChecked="True"
                                       Checked="NavigationButton_Checked"/>
                            <RadioButton x:Name="HardwareButton"
                                       Content="🔧 HARDWARE"
                                       Style="{StaticResource NavButton}"
                                       Checked="NavigationButton_Checked"/>
                            <RadioButton x:Name="PerformanceButton"
                                       Content="⚡ PERFORMANCE"
                                       Style="{StaticResource NavButton}"
                                       Checked="NavigationButton_Checked"/>
                            <RadioButton x:Name="NetworkButton"
                                       Content="🌐 NETWORK"
                                       Style="{StaticResource NavButton}"
                                       Checked="NavigationButton_Checked"/>
                            <RadioButton x:Name="ProgramsButton"
                                       Content="📦 PROGRAMS"
                                       Style="{StaticResource NavButton}"
                                       Checked="NavigationButton_Checked"/>
                            <RadioButton x:Name="ManagerButton"
                                        Content="📊 MANAGER"
                                        Style="{StaticResource NavButton}"
                                        Checked="NavigationButton_Checked"/>
                            <RadioButton x:Name="DiagnosticsButton"
                                       Content="🔍 DIAGNOSTICS"
                                       Style="{StaticResource NavButton}"
                                       Checked="NavigationButton_Checked"/>
                            <RadioButton x:Name="RecommendationsButton"
                                       Content="💡 OPTIMIZE"
                                       Style="{StaticResource NavButton}"
                                       Checked="NavigationButton_Checked"/>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- Content Frame -->
                <Border Grid.Column="1" 
                        Background="#0a0e1a">
                    <Frame x:Name="ContentFrame" 
                           NavigationUIVisibility="Hidden"
                           Background="Transparent"/>
                </Border>
            </Grid>

            <!-- Status Bar -->
            <Border Grid.Row="2" 
                    Background="#0f1420"
                    BorderBrush="#1a1f2e"
                    BorderThickness="0,1,0,0"
                    CornerRadius="0,0,10,10">
                <Grid Margin="25,6">
                    <TextBlock x:Name="StatusText"
                             Text="Ready"
                             FontFamily="Consolas"
                             FontSize="14"
                             Foreground="#6a7a8a"
                             VerticalAlignment="Center"/>
                    <TextBlock HorizontalAlignment="Right"
                             VerticalAlignment="Center">
                        <Run Text="v1.2.0" FontFamily="Consolas" FontSize="13" Foreground="#6a7a8a"/>
                        <Run Text=" | " Foreground="#1a1f2e"/>
                        <Run Text="© 2025 Hrzenak Technologies" FontFamily="Consolas" FontSize="13" Foreground="#6a7a8a"/>
                    </TextBlock>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>