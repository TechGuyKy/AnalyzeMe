<Application x:Class="AnalyzeMe.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Colors -->
            <SolidColorBrush x:Key="CyberCyan" Color="#00ffff"/>
            <SolidColorBrush x:Key="CyberMagenta" Color="#ff00ff"/>
            <SolidColorBrush x:Key="CyberPurple" Color="#9d00ff"/>
            <SolidColorBrush x:Key="CyberYellow" Color="#ffff00"/>
            <SolidColorBrush x:Key="CyberOrange" Color="#ff6600"/>
            <SolidColorBrush x:Key="DarkBackground" Color="#0a0e1a"/>
            <SolidColorBrush x:Key="DarkPanel" Color="#0f1420"/>
            <SolidColorBrush x:Key="BorderColor" Color="#1a1f2e"/>

            <!-- Window Control Button Style -->
            <Style x:Key="WindowControlButton" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="#00ffff"/>
                <Setter Property="FontSize" Value="27"/>
                <Setter Property="Width" Value="60"/>
                <Setter Property="Height" Value="50"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#1a1f2e"/>
                        <Setter Property="Foreground" Value="#ff00ff"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Navigation Button Style -->
            <Style x:Key="NavButton" TargetType="RadioButton">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="#6a7a8a"/>
                <Setter Property="FontFamily" Value="Consolas"/>
                <Setter Property="FontSize" Value="19"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Height" Value="65"/>
                <Setter Property="Margin" Value="10,8"/>
                <Setter Property="Padding" Value="25,0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="#00ffff"
                                    BorderThickness="0,0,0,0"
                                    CornerRadius="5">
                                <ContentPresenter VerticalAlignment="Center" 
                                                HorizontalAlignment="Left"
                                                Margin="{TemplateBinding Padding}"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsChecked" Value="True">
                        <Setter Property="Background" Value="#1a1f2e"/>
                        <Setter Property="Foreground" Value="#00ffff"/>
                    </Trigger>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Foreground" Value="#00ffff"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Card Style -->
            <Style x:Key="CyberCard" TargetType="Border">
                <Setter Property="Background" Value="#0f1420"/>
                <Setter Property="BorderBrush" Value="#1a1f2e"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="25"/>
                <Setter Property="Margin" Value="12"/>
            </Style>

            <!-- Metric Card Style -->
            <Style x:Key="MetricCard" TargetType="Border">
                <Setter Property="Background" Value="#0f1420"/>
                <Setter Property="BorderBrush" Value="#00ffff"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="20"/>
                <Setter Property="Margin" Value="12"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="#00ffff" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Title Text Style -->
            <Style x:Key="TitleText" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Consolas"/>
                <Setter Property="FontSize" Value="32"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Foreground" Value="#00ffff"/>
            </Style>

            <!-- Subtitle Text Style -->
            <Style x:Key="SubtitleText" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Consolas"/>
                <Setter Property="FontSize" Value="21"/>
                <Setter Property="Foreground" Value="#6a7a8a"/>
            </Style>

            <!-- Value Text Style -->
            <Style x:Key="ValueText" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Consolas"/>
                <Setter Property="FontSize" Value="43"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Foreground" Value="#00ffff"/>
            </Style>

            <!-- Label Text Style -->
            <Style x:Key="LabelText" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Consolas"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Foreground" Value="#6a7a8a"/>
            </Style>

            <!-- Button Style -->
            <Style x:Key="CyberButton" TargetType="Button">
                <Setter Property="Background" Value="#1a1f2e"/>
                <Setter Property="Foreground" Value="#00ffff"/>
                <Setter Property="FontFamily" Value="Consolas"/>
                <Setter Property="FontSize" Value="19"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="BorderBrush" Value="#00ffff"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="25,13"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"
                                                Margin="{TemplateBinding Padding}"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#00ffff"/>
                        <Setter Property="Foreground" Value="#0a0e1a"/>
                    </Trigger>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="Opacity" Value="0.5"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- ProgressBar Style -->
            <Style x:Key="CyberProgressBar" TargetType="ProgressBar">
                <Setter Property="Height" Value="27"/>
                <Setter Property="Background" Value="#1a1f2e"/>
                <Setter Property="Foreground" Value="#00ffff"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ProgressBar">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="10">
                                <Grid>
                                    <Border x:Name="PART_Track" />
                                    <Border x:Name="PART_Indicator" 
                                            HorizontalAlignment="Left"
                                            Background="{TemplateBinding Foreground}"
                                            CornerRadius="10">
                                        <Border.Effect>
                                            <DropShadowEffect Color="#00ffff" BlurRadius="10" ShadowDepth="0"/>
                                        </Border.Effect>
                                    </Border>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- ListView Style -->
            <Style x:Key="CyberListView" TargetType="ListView">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Foreground" Value="#6a7a8a"/>
                <Setter Property="FontFamily" Value="Consolas"/>
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            </Style>

            <!-- ListViewItem Style -->
            <Style TargetType="ListViewItem">
                <Setter Property="Background" Value="#0f1420"/>
                <Setter Property="Margin" Value="0,7"/>
                <Setter Property="Padding" Value="20"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListViewItem">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="#1a1f2e"
                                    BorderThickness="1"
                                    CornerRadius="5"
                                    Margin="{TemplateBinding Margin}"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#1a1f2e"/>
                    </Trigger>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="#1a1f2e"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            <!-- ComboBox Style -->
            <Style TargetType="ComboBox">
                <Setter Property="Background" Value="#0f1420"/>
                <Setter Property="Foreground" Value="#00ffff"/>
                <Setter Property="BorderBrush" Value="#1a1f2e"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="FontFamily" Value="Consolas"/>
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="Padding" Value="12,8"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ComboBox">
                            <Grid>
                                <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <ContentPresenter Grid.Column="0"
                                            Content="{TemplateBinding SelectionBoxItem}"
                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                            Margin="{TemplateBinding Padding}"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"/>

                                        <ToggleButton Grid.Column="1"
                                        Width="35"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        ClickMode="Press">
                                            <Path Data="M 0 0 L 4 4 L 8 0 Z" 
                                      Fill="#00ffff" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                                        </ToggleButton>
                                    </Grid>
                                </Border>

                                <Popup IsOpen="{TemplateBinding IsDropDownOpen}"
                           Placement="Bottom"
                           AllowsTransparency="True">
                                    <Border Background="#0f1420"
                                BorderBrush="#00ffff"
                                BorderThickness="1"
                                CornerRadius="5"
                                Margin="0,4,0,0">
                                        <Border.Effect>
                                            <DropShadowEffect Color="#00ffff" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                                        </Border.Effect>
                                        <ScrollViewer MaxHeight="250">
                                            <ItemsPresenter/>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="BorderBrush" Value="#00ffff"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- ComboBoxItem Style -->
            <Style TargetType="ComboBoxItem">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="#6a7a8a"/>
                <Setter Property="FontFamily" Value="Consolas"/>
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="Padding" Value="12,10"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ComboBoxItem">
                            <Border Background="{TemplateBinding Background}"
                        Padding="{TemplateBinding Padding}">
                                <ContentPresenter/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#1a1f2e"/>
                        <Setter Property="Foreground" Value="#00ffff"/>
                    </Trigger>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="#1a1f2e"/>
                        <Setter Property="Foreground" Value="#00ffff"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>